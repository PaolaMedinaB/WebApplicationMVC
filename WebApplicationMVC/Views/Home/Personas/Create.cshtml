@model WebApplicationMVC.Models.Persona

<h2>Crear Persona</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nombres"></label>
        <input asp-for="Nombres" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Apellidos"></label>
        <input asp-for="Apellidos" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NumeroIdentificacion">Número de identificación</label>
        <input asp-for="NumeroIdentificacion" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TipoIdentificacion">Tipo de identificación</label>
        <input asp-for="TipoIdentificacion" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FechaCreacion">Fecha de creación</label>
        <input asp-for="FechaCreacion" class="form-control" />
    </div>

    <!-- Add other fields as needed -->

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
